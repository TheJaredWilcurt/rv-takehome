
# http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,css,sass,scss,vue,html}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

[*.{js,css,sass,scss,vue}]
indent_size = 4

[*.{html}]
indent_size = 2

[package.json]
indent_size = 2
